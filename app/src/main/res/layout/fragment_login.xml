<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/login_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginStart="34dp"
        />
    <TextView
        android:id="@+id/login_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올투게더"
        android:textSize="43sp"
        android:textColor="@color/theme_blue"
        app:layout_constraintTop_toBottomOf="@+id/login_welcome_text"
        app:layout_constraintStart_toStartOf="@+id/login_welcome_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/login_naver_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title_text"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/bg_login_naver"
        android:text="네이버로 회원가입"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingVertical="13dp"
        />
    <TextView
        android:id="@+id/login_id_exist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_naver_button"
        android:layout_marginTop="22dp"
        android:text="이미 아이디가 있습니다."
        android:textSize="10sp"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>