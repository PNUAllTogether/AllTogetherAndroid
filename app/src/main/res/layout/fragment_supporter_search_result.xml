<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/supporter_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전문가 검색 결과"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/supporter_search_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조건에 맞는 전문가가 "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supporter_search_title"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/supporter_search_desc_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/supporter_search_desc"
        app:layout_constraintTop_toBottomOf="@+id/supporter_search_title"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/supporter_search_desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명 있어요!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/supporter_search_desc_num"
        app:layout_constraintTop_toBottomOf="@+id/supporter_search_title"
        android:layout_marginTop="12dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/supporter_search_result_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supporter_search_desc"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constrainedWidth="true"
        tools:listitem="@layout/supporter_search_result_item"
        />
</androidx.constraintlayout.widget.ConstraintLayout>