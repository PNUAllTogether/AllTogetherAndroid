<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/supporter_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp">
        <ImageView
            android:id="@+id/supporter_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user" />
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/supporter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신짱구"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/supporter_profile"
        app:layout_constraintTop_toTopOf="@+id/supporter_profile"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/supporter_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="언어치료사"
        android:textColor="@color/s_textBlack"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/supporter_profile"
        app:layout_constraintTop_toBottomOf="@+id/supporter_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/supporter_school_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="소속"
        app:layout_constraintStart_toStartOf="@+id/supporter_profile"
        app:layout_constraintTop_toBottomOf="@+id/supporter_profile"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/supporter_school_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="한국대학교 특수교육과"
        app:layout_constraintStart_toEndOf="@+id/g1"
        app:layout_constraintBottom_toBottomOf="@+id/supporter_school_title"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/supporter_age_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="나이"
        app:layout_constraintStart_toStartOf="@+id/supporter_profile"
        app:layout_constraintTop_toBottomOf="@+id/supporter_school_title"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/supporter_age_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="30"
        app:layout_constraintStart_toEndOf="@+id/g1"
        app:layout_constraintBottom_toBottomOf="@+id/supporter_age_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/supporter_gender_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="성별"
        app:layout_constraintStart_toStartOf="@+id/supporter_profile"
        app:layout_constraintTop_toBottomOf="@+id/supporter_age_title"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/supporter_gender_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="여성"
        app:layout_constraintStart_toEndOf="@+id/g1"
        app:layout_constraintBottom_toBottomOf="@+id/supporter_gender_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/supporter_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="경력"
        app:layout_constraintStart_toStartOf="@+id/supporter_profile"
        app:layout_constraintTop_toBottomOf="@+id/supporter_gender_title"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/supporter_child_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="지적장애 아동"
        app:layout_constraintStart_toEndOf="@+id/g1"
        app:layout_constraintBottom_toBottomOf="@+id/supporter_child_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/supporter_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="연락가능시간"
        app:layout_constraintStart_toStartOf="@+id/supporter_profile"
        app:layout_constraintTop_toBottomOf="@+id/supporter_child_title"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/supporter_time_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="몇시부터 몇시까지"
        app:layout_constraintStart_toEndOf="@+id/g1"
        app:layout_constraintBottom_toBottomOf="@+id/supporter_time_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/supporter_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="소개문"
        app:layout_constraintStart_toStartOf="@+id/supporter_profile"
        app:layout_constraintTop_toBottomOf="@+id/supporter_time_title"
        android:layout_marginTop="20dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/supporter_intro_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/supporter_intro_title"
        app:layout_constraintStart_toStartOf="@+id/supporter_intro_title"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/supporter_intro_edit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:drawablePadding="12dp"
            android:focusable="false"
            android:clickable="false"
            android:hint=""
            android:gravity="top|start"
            android:padding="14dp"
            android:textColorHint="@color/p_light_gray"
            android:textColor="@color/s_textBlack"
            android:textSize="14sp"
            android:background="@drawable/box_8rad_grey_fill"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/supporter_add_button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/box_fill_blue_rad_6dp"
        android:text="추가하기"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/supporter_intro_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="52dp"
        android:layout_marginBottom="15dp" />
</androidx.constraintlayout.widget.ConstraintLayout>