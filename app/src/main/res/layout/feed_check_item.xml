<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp">
    <CheckBox
        android:id="@+id/check_item_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
        />
    <TextView
        android:id="@+id/check_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/check_item_radio"
        app:layout_constraintTop_toTopOf="@+id/check_item_radio"
        app:layout_constraintBottom_toBottomOf="@+id/check_item_radio"
        android:layout_marginStart="10dp"
        android:text="아동의 목표"
        android:textColor="@color/black"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/check_item_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/check_item_radio"
        app:layout_constraintBottom_toBottomOf="@+id/check_item_radio"
        />
</androidx.constraintlayout.widget.ConstraintLayout>