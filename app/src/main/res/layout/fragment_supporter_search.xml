<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:id="@+id/search_scroll_view">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/supporter_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전문가 검색"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:id="@+id/supporter_search_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/supporter_search_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/supporter_search_name_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/supporter_search_name_title"
            app:layout_constraintStart_toStartOf="@+id/supporter_search_name_title"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/supporter_search_name_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="text"
                android:drawablePadding="12dp"
                android:focusable="true"
                android:clickable="true"
                android:hint="전문가의 이름을 입력해 주세요."
                android:textColorHint="@color/p_light_gray"
                android:textColor="@color/s_textBlack"
                android:textSize="14sp"
                android:background="@drawable/box_8rad_grey_fill"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/supporter_search_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/supporter_search_name_selector"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/supporter_search_region_spinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/box_8rad_grey_fill"
            app:layout_constraintTop_toBottomOf="@+id/supporter_search_spinner_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.01"/>
        <TextView
            android:id="@+id/supporter_search_gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/supporter_search_region_spinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            />
        <View
            android:id="@+id/chip_male"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_chip"
            app:layout_constraintTop_toBottomOf="@+id/supporter_search_gender_title"
            app:layout_constraintStart_toStartOf="@+id/supporter_search_gender_title"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/chip_male_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="남자"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/chip_male"
            app:layout_constraintEnd_toEndOf="@+id/chip_male"
            app:layout_constraintTop_toTopOf="@+id/chip_male"
            app:layout_constraintBottom_toBottomOf="@+id/chip_male"
            />
        <View
            android:id="@+id/chip_female"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_chip_disabled"
            app:layout_constraintTop_toBottomOf="@+id/supporter_search_gender_title"
            app:layout_constraintStart_toEndOf="@+id/chip_male"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/chip_female_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="여자"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/chip_female"
            app:layout_constraintEnd_toEndOf="@+id/chip_female"
            app:layout_constraintTop_toTopOf="@+id/chip_female"
            app:layout_constraintBottom_toBottomOf="@+id/chip_female"
            />
        <TextView
            android:id="@+id/supporter_search_major_chip_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/chip_male"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/supporter_search_major_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/supporter_search_major_chip_group_title"
            app:layout_constraintStart_toStartOf="@+id/supporter_search_major_chip_group_title"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/supporter_search_major_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="text"
                android:drawablePadding="12dp"
                android:focusable="true"
                android:clickable="true"
                android:hint="전문가의 전공을 입력해 주세요."
                android:textColorHint="@color/p_light_gray"
                android:textColor="@color/s_textBlack"
                android:textSize="14sp"
                android:background="@drawable/box_8rad_grey_fill"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/supporter_search_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@drawable/box_fill_blue_rad_6dp"
            android:text="검색"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toBottomOf="@+id/supporter_search_major_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="52dp"
            android:layout_marginBottom="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
