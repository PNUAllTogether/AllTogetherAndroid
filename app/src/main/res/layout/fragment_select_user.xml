<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="78dp"
        android:text="환영합니다"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="올투게더"
        android:textColor="@color/theme_blue"
        android:textSize="43sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/login_welcome_text"
        app:layout_constraintTop_toBottomOf="@+id/login_welcome_text" />

    <View
        android:id="@+id/button_select_parent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/box_circle"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/button_select_supporter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title_text" />

    <View
        android:id="@+id/button_select_supporter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/box_circle"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_select_parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title_text" />

    <TextView
        android:id="@+id/button_select_parent_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학부모"
        android:textColor="@color/theme_blue"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_select_parent"
        app:layout_constraintEnd_toEndOf="@+id/button_select_parent"
        app:layout_constraintStart_toStartOf="@+id/button_select_parent"
        app:layout_constraintTop_toTopOf="@+id/button_select_parent" />

    <TextView
        android:id="@+id/button_select_supporter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전문가"
        android:textColor="@color/theme_blue"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_select_supporter"
        app:layout_constraintEnd_toEndOf="@+id/button_select_supporter"
        app:layout_constraintStart_toStartOf="@+id/button_select_supporter"
        app:layout_constraintTop_toTopOf="@+id/button_select_supporter" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="가입 목적을 선택해 주세요"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_select_supporter" />
</androidx.constraintlayout.widget.ConstraintLayout>